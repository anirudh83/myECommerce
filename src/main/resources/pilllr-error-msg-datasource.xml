<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    <bean name="errorTransactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
        <property name="sessionFactory" ref="pilllrErrorMsgHandlerSessionFactory" />
    </bean>
<bean id="pilllrErrorMsgHandlerSessionFactory"
      class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
    <property name="dataSource" ref="pilllrErrorMsgHandlerDataSource" />
    <property name="packagesToScan" value="com.pilllr.errors.domain" />
    <property name="hibernateProperties">
        <props>
            <prop key="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</prop>
            <prop key="hibernate.show_sql">true</prop>
            <prop key="hibernate.hbm2ddl.auto">${error.msg.auto.ddl}</prop>
            <prop key="hibernate.hbm2ddl.import_files">import.sql</prop>
            <prop key="hibernate.id.new_generator_mappings">true</prop>
        </props>
    </property>
</bean>

<bean id="pilllrErrorMsgHandlerDataSource"
      class="org.springframework.jdbc.datasource.DriverManagerDataSource">
<property name="driverClassName" value="${jdbc.error.msg.driverClassName}" />
<property name="url" value="${jdbc.error.msg.url}" />
<property name="username" value="${jdbc.error.msg.username}" />
<property name="password" value="${jdbc.error.msg.password}" />
</bean>
</beans>